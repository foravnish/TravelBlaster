<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp15"
                    android:layout_marginBottom="@dimen/dp10"
                    android:orientation="vertical"
                    android:padding="@dimen/dp10">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp0_5"
                        android:layout_marginTop="@dimen/dp10"
                        android:visibility="gone"
                        android:background="@color/inactive_text" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/dp10"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtPersonDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp10"
                            android:text="2 Travellers . Date Select from Edit"
                            android:textColor="@color/grayText"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/text_size_14sp" />


                        <TextView
                            android:id="@+id/txtEdit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/dp10"
                            android:text="EDIT"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/blue2"
                            android:textSize="@dimen/text_size_16sp" />

                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp0_5"
                        android:layout_marginTop="@dimen/dp5"
                        android:visibility="gone"
                        android:background="@color/inactive_text" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp10">


                        <TextView
                            android:id="@+id/txt1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Include in the package"
                            android:textColor="@color/grayText"
                            android:textSize="@dimen/text_size_24sp" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fabEnquiry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right|bottom"
                            android:src="@drawable/phone1"
                            android:tint="@color/white" />

                        <Button
                            android:id="@+id/btn_enq_now"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp30"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/button_blue_strock"
                            android:text="Enquiry"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_18sp"
                            android:textStyle="bold"
                            android:visibility="gone" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/txt1"
                            android:text="You can fine-tune them to your liking"
                            android:textColor="@color/grayText"
                            android:textSize="@dimen/text_size_16sp" />

                    </RelativeLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_inclusion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relBest"
                        android:layout_marginTop="@dimen/dp10"
                        android:layout_marginRight="@dimen/dp10" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp0_5"
                        android:layout_marginTop="@dimen/dp10"
                        android:background="@color/inactive_text" />

                    <TextView
                        android:id="@+id/txtFlight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp10"
                        android:text="@string/txt_flight_detail"
                        android:textColor="@color/grayText"
                        android:textSize="@dimen/text_size_22sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp0_5"
                        android:layout_marginTop="@dimen/dp10"
                        android:background="@color/inactive_text" />




                    <TextView
                        android:id="@+id/txtDesc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp20"
                        android:text="@string/hello_blank_fragment"
                        android:textColor="@color/grayText"
                        android:textSize="@dimen/text_size_16sp" />


                </LinearLayout>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>