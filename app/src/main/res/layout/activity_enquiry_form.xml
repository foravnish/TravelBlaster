<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.forms.EnquiryFormActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:layout_collapseMode="pin"
        app:theme="@style/ToolbarTheme"
        app:titleTextColor="@android:color/white" />



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp20"
                        android:layout_marginRight="@dimen/dp20"
                        android:layout_marginTop="@dimen/dp30"
                        android:text="Hello, Visitor!"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/text_size_22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp20"
                        android:layout_marginRight="@dimen/dp20"
                        android:text="Planing for a holiday?"
                        android:gravity="center"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/text_size_20sp" />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_marginRight="@dimen/dp10"
                        android:orientation="vertical">


                        <EditText
                            android:id="@+id/edt_destination"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:hint="Your Destination"
                            android:background="@drawable/edit_txt"
                            android:layout_marginTop="@dimen/dp50"
                            android:layout_marginLeft="@dimen/dp20"
                            android:layout_marginRight="@dimen/dp20"
                            android:padding="@dimen/dp15"
                            android:elevation="@dimen/dp20"
                            android:inputType="text"
                            android:paddingLeft="@dimen/dp10"
                            android:drawablePadding="@dimen/dp20"
                            android:drawableLeft="@drawable/address"/>


                        <EditText
                            android:id="@+id/edt_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:hint="Your Name"
                            android:maxLength="10"
                            android:background="@drawable/edit_txt"
                            android:layout_marginTop="@dimen/dp20"
                            android:layout_marginLeft="@dimen/dp20"
                            android:layout_marginRight="@dimen/dp20"
                            android:padding="@dimen/dp15"
                            android:elevation="@dimen/dp20"
                            android:paddingLeft="@dimen/dp10"
                            android:drawablePadding="@dimen/dp20"
                            android:drawableLeft="@drawable/user"
                            />

                        <EditText
                            android:id="@+id/edt_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:hint="Your Travel Date"
                            android:paddingLeft="@dimen/dp10"
                            android:background="@drawable/edit_txt"
                            android:layout_marginTop="@dimen/dp20"
                            android:clickable="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:editable="false"
                            android:layout_marginLeft="@dimen/dp20"
                            android:layout_marginRight="@dimen/dp20"
                            android:padding="@dimen/dp15"
                            android:elevation="@dimen/dp20"
                            android:drawablePadding="@dimen/dp20"
                            android:drawableLeft="@drawable/clock"
                            />


                        <EditText
                            android:id="@+id/edt_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:hint="Email Id"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="@dimen/dp10"
                            android:background="@drawable/edit_txt"
                            android:layout_marginTop="@dimen/dp20"
                            android:layout_marginLeft="@dimen/dp20"
                            android:layout_marginRight="@dimen/dp20"
                            android:padding="@dimen/dp15"
                            android:elevation="@dimen/dp20"
                            android:drawablePadding="@dimen/dp20"
                            android:drawableLeft="@drawable/mail"
                            />


                        <EditText
                            android:id="@+id/edt_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:hint="Mobile"
                            android:maxLength="10"
                            android:inputType="phone"
                            android:background="@drawable/edit_txt"
                            android:layout_marginTop="@dimen/dp20"
                            android:layout_marginLeft="@dimen/dp20"
                            android:layout_marginRight="@dimen/dp20"
                            android:padding="@dimen/dp15"
                            android:elevation="@dimen/dp20"
                            android:paddingLeft="@dimen/dp10"
                            android:drawablePadding="@dimen/dp20"
                            android:drawableLeft="@drawable/phone1"
                            />


